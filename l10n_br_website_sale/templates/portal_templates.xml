<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="_assets_primary_variables" inherit_id="website._assets_primary_variables">
        <xpath expr="//link[last()]" position="after">
            <link rel="stylesheet" type="text/scss" href="/l10n_br_website_sale/static/src/scss/portal_templates.scss"/>
        </xpath>
    </template>

    <template id="portal_address" inherit_id="website_sale.address">
        <form action="/shop/address" position="replace">
            <form action="/shop/address" method="post" class="checkout_autoformat">
                <div class="form-row">
                    <!-- AX4B - FOCVS - ECOM_001- Tela de cadastro Pessoa física/Jurídica -->
                    <label class="required-label"/>
                    <label style="font-size:12px;font-style:italic;">Campos obrigatórios</label>
                    <!-- AX4B - FOCVS - ECOM_001- Tela de cadastro Pessoa física/Jurídica -->
                    <div
                        t-attf-class="form-group #{error.get('company_type') and 'o_has_error' or ''} col-xl-12 div_type"
                    >
                        <label class="col-form-label" for="person_type">Tipo de
                            Pessoa: </label>
                        <br />
                        <div class="form-check form-check-inline">
                            <input
                                type="radio"
                                name="company_type"
                                id="radioCompany"
                                value="company"
                                t-attf-class="#{error.get('company_type') and 'is-invalid' or ''}"
                                t-att-checked="'company_type' in checkout and checkout['company_type'] == 'company'"
                            />
                            Pessoa Jurídica </div>
                        <div class="form-check form-check-inline">
                            <input
                                type="radio"
                                name="company_type"
                                id="radioPerson"
                                value="person"
                                t-attf-class="#{error.get('company_type') and 'is-invalid' or ''}"
                                t-att-checked="'company_type' in checkout and checkout['company_type'] == 'person'"
                            />
                            Pessoa Física </div>
                    </div>

                    <div
                        t-attf-class="form-group #{error.get('name') and 'o_has_error' or ''} col-lg-12 div_name"
                    >
                        <!-- AX4B - FOCVS - ECOM_001- Tela de cadastro Pessoa física/Jurídica
                            Incluído o id na label -->
                        <label id="id_name" class="col-form-label required-label" for="name">Name</label>
                        <!-- AX4B - FOCVS - ECOM_001- Tela de cadastro Pessoa física/Jurídica -->
                        <input
                            type="text"
                            name="name"
                            style="background:#FFF7EC"
                            t-attf-class="form-control #{error.get('name') and 'is-invalid' or ''}"
                            t-att-value="'name' in checkout and checkout['name']"
                        />
                    </div>
                    <div
                        class="w-100" />
                    <t t-if="mode[1] == 'billing'">
                        <div
                            t-attf-class="form-group #{error.get('email') and 'o_has_error' or ''} col-lg-6"
                            id="div_email"
                        >
                            <label class="col-form-label required-label" for="email">
                                Email</label>
                            <input
                                type="email"
                                name="email"
                                style="background:#FFF7EC"
                                t-attf-class="form-control #{error.get('email') and 'is-invalid' or ''}"
                                t-att-value="'email' in checkout and checkout['email']"
                            />
                        </div>

                        <div
                            t-attf-class="form-group #{error.get('cnpj_cpf') and 'o_has_error' or ''} col-xl-6"
                            id="cnpj_cpf"
                        >
                            <!-- AX4B - FOCVS - ECOM_001- Tela de cadastro Pessoa física/Jurídica
                            Incluído o id na label -->
                            <label id="id_cpf" class="col-form-label required-label" for="contact_name">CPF</label>
                            <!-- AX4B - FOCVS - ECOM_001- Tela de cadastro Pessoa física/Jurídica -->
                            <input
                                type="text"
                                id="input_cnpj_cpf"
                                style="background:#FFF7EC"
                                name="cnpj_cpf"
                                t-attf-class="form-control #{error.get('cnpj_cpf') and 'is-invalid' or ''}"
                                t-att-value="'cnpj_cpf' in checkout and checkout['cnpj_cpf']"
                            />
                        </div>
                    </t>
                    <!-- AX4B - FOCVS - ECOM_001- Tela de cadastro Pessoa física/Jurídica -->
                    <div
                        t-attf-class="form-group #{error.get('inscr_est') and 'o_has_error' or ''} col-lg-6"
                        id="div_inscr_est"
                    >
                        <label class="col-form-label required-label" for="inscr_est">Inscrição Estadual</label>
                        <label style="font-size:12px;font-style:italic;">se isento escrever ISENTO</label>
                        <input
                            type="text"
                            name="inscr_est"
                            style="background:#FFF7EC"
                            t-attf-class="form-control #{error.get('inscr_est') and 'is-invalid' or ''}"
                            t-att-value="'inscr_est' in checkout and checkout['inscr_est']"
                        />
                    </div>
                    <!-- AX4B - FOCVS - ECOM_001- Tela de cadastro Pessoa física/Jurídica -->
                    <div
                        t-attf-class="form-group #{error.get('phone') and 'o_has_error' or ''} col-lg-6"
                        id="div_phone"
                    >
                        <label class="col-form-label required-label" for="phone">Phone</label>
                        <input
                            type="tel"
                            id="id_phone"
                            name="phone"
                            style="background:#FFF7EC"
                            t-attf-class="form-control #{error.get('phone') and 'is-invalid' or ''}"
                            t-att-value="'phone' in checkout and checkout['phone']"
                        />
                    </div>
                    <!-- AX4B - FOCVS - ECOM_001- Tela de cadastro Pessoa física/Jurídica -->
                    <div
                        t-attf-class="form-group #{error.get('mobile') and 'o_has_error' or ''} col-lg-6"
                        id="div_mobile"
                    >
                        <label class="col-form-label" for="mobile">Celular</label>
                        <input
                            type="tel"
                            id="id_mobile"
                            name="mobile"
                            t-attf-class="form-control #{error.get('mobile') and 'is-invalid' or ''}"
                            t-att-value="'mobile' in checkout and checkout['mobile']"
                        />

                    </div>
                    <!-- AX4B - FOCVS - ECOM_001- Tela de cadastro Pessoa física/Jurídica -->
                    <div
                        class="w-100" />
                    <t
                        t-set='zip_city'
                        t-value='country and [x for x in country.get_address_fields() if x in ["zip", "city"]] or ["city", "zip"]'
                    />
                    <t
                        t-if="'zip' in zip_city">
                        <div
                            t-attf-class="form-group #{error.get('zip') and 'o_has_error' or ''} col-md-6 div_zip"
                        >
                            <label class="col-form-label required-label" style="font-weight: bold;" for="zip">
                                Zip Code</label>
                            <input
                                type="text"
                                name="zip"
                                style="background:#FFF7EC"
                                t-attf-class="input-zipcode form-control #{error.get('zip') and 'is-invalid' or ''}"
                                t-att-value="'zip' in checkout and checkout['zip']"
                            />
                        </div>
                    </t>
                    <div
                        t-attf-class="form-group #{error.get('street_name') and 'o_has_error' or ''} col-md-6 div_street"
                    >
                        <label class="col-form-label required-label" for="street_name">
                            Street</label>
                        <input
                            type="text"
                            name="street_name"
                            style="background:#FFF7EC"
                            t-attf-class="form-control #{error.get('street_name') and 'is-invalid' or ''}"
                            t-att-value="'street_name' in checkout and checkout['street_name']"
                        />
                    </div>
                    <div
                        class="w-100" />
                    <div
                        t-attf-class="form-group #{error.get('street_number') and 'o_has_error' or ''} col-xl-6"
                    >
                        <label class="col-form-label required-label" for="street_number">
                            Número</label>
                        <input
                            type="text"
                            name="street_number"
                            style="background:#FFF7EC"
                            t-attf-class="form-control #{error.get('street_number') and 'is-invalid' or ''}"
                            t-att-value="'street_number' in checkout and checkout['street_number']"
                        />
                    </div>
                    <div
                        t-attf-class="form-group #{error.get('district') and 'o_has_error' or ''} col-xl-6"
                    >
                        <label class="col-form-label required-label" for="district">
                            Bairro</label>
                        <input
                            type="text"
                            name="district"
                            style="background:#FFF7EC"
                            t-attf-class="form-control #{error.get('district') and 'is-invalid' or ''}"
                            t-att-value="'district' in checkout and checkout['district']"
                        />
                    </div>
                    <div
                        class="w-100" />
                    <div
                        t-attf-class="form-group #{error.get('street2') and 'o_has_error' or ''} col-md-6 div_street2"
                    >
                        <label class="col-form-label label-optional" for="street2">
                            Complemento</label>
                        <input
                            type="text"
                            name="street2"
                            t-attf-class="form-control #{error.get('street2') and 'is-invalid' or ''}"
                            t-att-value="'street2' in checkout and checkout['street2']"
                        />
                    </div>
                    <div
                        t-attf-class="form-group #{error.get('country_id') and 'o_has_error' or ''} col-lg-6 div_country"
                    >
                        <label class="col-form-label required-label" for="country_id">
                            Country</label>
                        <select
                            id="country_id"
                            name="country_id"
                            style="background:#FFF7EC"
                            t-attf-class="form-control #{error.get('country_id') and 'is-invalid' or ''}"
                            t-att-mode="mode[1]"
                        >
                            <option value="">Country...</option>
                            <t t-foreach="countries" t-as="c">
                                <option
                                    t-att-value="c.id"
                                    t-att-selected="c.id == (country and country.id or -1)"
                                >
                                    <t t-esc="c.name" />
                                </option>
                            </t>
                        </select>
                    </div>
                    <div
                        id="div_state"
                        t-attf-class="form-group #{error.get('state_id') and 'o_has_error' or ''} col-lg-6 div_state"
                        t-att-style="(not country or not country.state_ids) and 'display: none'"
                    >
                        <label class="col-form-label required-label" style="font-weight: bold;" for="state_id">
                            State</label>
                        <select
                            id="state_id"
                            name="state_id"
                            style="background:#FFF7EC"
                            t-attf-class="form-control #{error.get('state_id') and 'is-invalid' or ''}"
                            data-init="1"
                        >
                            <option value="">State...</option>
                            <t t-foreach="country and country.state_ids or []" t-as="s">
                                <option
                                    t-att-value="s.id"
                                    t-att-selected="s.id == ('state_id' in checkout and country and checkout['state_id'] != '' and int(checkout['state_id']))"
                                >
                                    <t t-esc="s.name" />
                                </option>
                            </t>
                        </select>
                    </div>

                    <div
                        t-attf-class="form-group #{error.get('city_id') and 'o_has_error' or ''} col-xl-6"
                        t-att-style="(not country or not country.state_ids) and 'display: none'"
                    >
                        <label
                            class="col-form-label"
                            for="city_id"
                            t-att-style="(not country or not country.state_ids) and 'display: none'"
                        >
                            Cidade</label>
                        <select
                            name="city_id"
                            id="city_id"
                            style="background:#FFF7EC"
                            t-attf-class="form-control #{error.get('city_id') and 'is-invalid' or ''}"
                            t-att-style="(not country or not country.state_ids) and 'display: none'"
                        >
                            <option value="">select...</option>
                            <t t-foreach="cities or []" t-as="citie">
                                <option
                                    t-att-value="citie.id"
                                    style="display:none;"
                                    t-att-data-state_id="citie.state_id.id"
                                    t-att-selected="citie.id == ('city_id' in checkout and checkout['city_id'] != '' and int(checkout['city_id']))"
                                >
                                    <t t-esc="citie.name" />
                                </option>
                            </t>
                        </select>

                    </div>

                    <div
                        t-attf-class="form-group #{error.get('city') and 'o_has_error' or ''} col-lg-6"
                        t-att-style="(country and not country.state_ids) and 'display: none'"
                    >
                        <label class="col-form-label required-label" for="city">
                            City</label>
                        <input
                            type="text"
                            name="city"
                            id="city"
                            style="background:#FFF7EC"
                            t-attf-class="form-control #{error.get('city') and 'is-invalid' or ''}"
                            t-att-value="'city' in checkout and checkout['city']"
                        />
                    </div>

                    <div
                        class="w-100" />
                    <t t-if="mode == ('new', 'billing') and not only_services">
                        <div class="col-lg-12">
                            <div class="checkbox">
                                <label>
                                    <input
                                        type="checkbox"
                                        id='shipping_use_same'
                                        class="mr8"
                                        name='use_same'
                                        value="1"
                                        checked='checked'
                                    /> the billing address is the same as the shipping/licensing address <span
                                        class='ship_to_other text-muted'
                                        style="display: none"
                                    > &amp;nbsp;(<i>YRegistration of delivery/licensing address will be requested on the next page) </i></span>
                                </label>
                            </div>
                        </div>
                    </t>
                    
                </div>
                
                <input
                    type="hidden"
                    name="csrf_token"
                    t-att-value="request.csrf_token()"
                />
                <input type="hidden" name="submitted" value="1" />
                <input
                    type="hidden"
                    name="partner_id"
                    t-att-value="partner_id or '0'"
                />
                <input type="hidden" name="callback" t-att-value="callback" />
                <!-- Example -->
                <input
                    type="hidden"
                    name="field_required"
                    t-att-value="'phone,name'"
                />

                <div class="d-flex justify-content-between">
                    <a
                        role="button"
                        t-att-href="mode == ('new', 'billing') and '/shop/cart' or '/shop/checkout'"
                        class="btn btn-secondary mb32"
                    >
                        <i class="fa fa-chevron-left" />
                        <span>Back</span>
                    </a>
                    <a
                        role="button"
                        href="#"
                        class="btn btn-primary mb32 a-submit a-submit-disable a-submit-loading"
                    >
                        <span>Next</span>
                        <i class="fa fa-chevron-right" />
                    </a>
                </div>
            </form>
        </form>
        <xpath expr="//p[1]" position="replace">
            <p  groups="sale.group_delivery_invoice_address">
                <b>Warning</b>!In this form you are editing your <b>shipping/licensing address</b> at the same time!<br/>
                If you need to include a new shipping/licensing address that is different from your billing address, please create a <a href='/shop/address'>new address</a>.
            </p>
        </xpath>
        <xpath expr="//div[@class='col-12 col-xl order-xl-1 oe_cart'][1]/div[1]/t[1]" position="replace">
            <t t-if="mode == ('new', 'billing')">
                <h2 class="o_page_header mt8">Sign Up
                    <small> or </small>
                    <a role="button" href='/web/login?redirect=/shop/checkout' class='btn btn-primary' style="margin-top: -11px">Log In</a>
                </h2>
            </t>
        </xpath>
    </template>
    <template id="ax4b_confirmation" inherit_id="website_sale.confirmation">
        <xpath expr="//div[@class='card-body'][1]" position="replace">
            <div class="card-body">
                <t t-set="same_shipping" t-value="bool(order.partner_shipping_id==order.partner_id or only_services)" />
                <div><b>Billing <t t-if="same_shipping and not only_services"> &amp; Shipping/Licensing</t>: </b><span t-esc='order.partner_id' t-options="dict(widget='contact', fields=['address'], no_marker=True, separator=', ')" class="address-inline"/></div>
                <div t-if="not same_shipping and not only_services" groups="sale.group_delivery_invoice_address"><b>Shipping/Licensing: </b><span t-esc='order.partner_shipping_id' t-options="dict(widget='contact', fields=['address'], no_marker=True, separator=', ')"  class="address-inline"/></div>
              </div>
        </xpath> 
        <xpath expr="//t[3]" position="replace" display="none">
        </xpath>
    </template>


    <template id="ax4b_payment" inherit_id="website_sale.payment">
        <xpath expr="//div[@class='card-body'][1]" position="replace">
            <div class="card-body">
                <a class='float-right no-decoration' href='/shop/checkout'><i class="fa fa-edit"/> Edit</a>
                <t t-set="same_shipping" t-value="bool(order.partner_shipping_id==order.partner_id or only_services)" />
                <div><b>Billing <t t-if="same_shipping and not only_services"> &amp; Shipping/Licensing</t>: </b><span t-esc='order.partner_id' t-options="dict(widget='contact', fields=['address'], no_marker=True, separator=', ')" class="address-inline"/></div>
                <div t-if="not same_shipping and not only_services" groups="sale.group_delivery_invoice_address"><b>Shipping/Licensing: </b><span t-esc='order.partner_shipping_id' t-options="dict(widget='contact', fields=['address'], no_marker=True, separator=', ')"  class="address-inline"/></div>
              </div>
        </xpath>
    </template>


    <template id="ax4b_sign_up" inherit_id="auth_signup.signup">
        <xpath expr="//button[@class='btn btn-primary btn-block'][1]" position="replace">
            <button type="submit" class="btn btn-primary btn-block"> Sign up</button>            
        </xpath>
    </template>


    <template id="ax4b_cart_summary" inherit_id="website_sale.cart_summary">
        <xpath expr="//div[@class='card'][1]" position="after">
            <t t-if="request.env['res.users']._get_signup_invitation_scope() == 'b2c' and request.website.is_public_user() and request.httprequest.path == '/shop/confirmation'">
                <p class="alert alert-info mt-3" role="status">
                    <a role="button" t-att-href='website_sale_order.partner_id.signup_prepare() and website_sale_order.partner_id.with_context(relative_url=True).signup_url' class='btn btn-primary'>Sign Up</a>
                     to follow your order.
                </p>
            </t>
            <t t-else="">
            </t>
        </xpath>
    </template>
</odoo>